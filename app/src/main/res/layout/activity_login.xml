<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.cfbb.android.features.authentication.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_bg">

        <ImageView
            android:id="@id/iv_01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            android:src="@mipmap/cha_ico" />

        <ImageView
            android:id="@id/iv_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@mipmap/default_login_ico" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_02"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <requestFocus />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@id/et_01"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_bg"
                    android:gravity="bottom"
                    android:hint="@string/please_enter_username_hint"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#E19D88"
                    android:textSize="@dimen/size_18" />

                <ImageView
                    android:id="@id/iv_delete1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:scaleType="center"
                    android:src="@mipmap/et_delete_ico"
                    android:visibility="gone" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:src="#E19D88" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.smileback.safeinputlib.IJMInputEditText
                    android:id="@+id/ijmKB"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_bg"
                    android:gravity="bottom"
                    android:hint="@string/please_enter_password_hint"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#E19D88" />

                <ImageView
                    android:id="@id/iv_delete2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:scaleType="center"
                    android:src="@mipmap/et_delete_ico"
                    android:visibility="gone" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:src="#E19D88" />

            <Button
                android:id="@id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/login_bg_selector"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20" />

            <TextView
                android:id="@id/tv_title"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/forget_password_str"
                android:textColor="@drawable/rechage_txt_selecotr"
                android:textSize="@dimen/size_16" />

        </LinearLayout>

        <TextView
            android:id="@id/tv_02"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/free_register_str"
            android:textColor="@drawable/rechage_txt_selecotr"
            android:textSize="@dimen/size_16" />
    </RelativeLayout>

</RelativeLayout>
