<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_color"
    android:orientation="vertical"
    tools:context="com.cfbb.android.features.account.MyBankInfoActivity">

    <include layout="@layout/view_header"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/gray5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/gray_semiangle_bg"
            android:orientation="vertical"
            android:padding="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/iv_01"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/default_login_ico" />

                <TextView
                    android:id="@id/tv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_01"
                    android:text="中国银行" />

                <ImageView
                    android:id="@id/iv_02"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/can_unbundling_ico" />

            </RelativeLayout>

            <TextView
                android:id="@id/tv_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="47465454564564564" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="持卡人"
                android:textColor="@color/balck"
                android:textSize="@dimen/size_18" />

            <TextView
                android:id="@id/tv_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="@color/balck"
                android:textSize="@dimen/size_18" />
        </LinearLayout>

        <ImageView style="@style/iv_gray_horizontal_line" />

        <LinearLayout
            android:id="@id/ll_01"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="在用资金"
                android:textColor="@color/txt_3"
                android:textSize="@dimen/size_18" />

            <TextView
                android:id="@id/tv_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/transparent_bg"
                android:text="3000.0元"
                android:textColorHint="#CCCCCC"
                android:textSize="@dimen/size_18" />

            <ImageView
                android:id="@id/iv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_red_up" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户余额" />

                <TextView
                    android:id="@id/tv_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.0元" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持有中" />

                <TextView
                    android:id="@id/tv_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.0元" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投标中" />

                <TextView
                    android:id="@id/tv_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.0元" />
            </LinearLayout>

        </LinearLayout>


        <ImageView style="@style/iv_gray_horizontal_line" />


    </LinearLayout>

    <TextView
        android:id="@id/tv_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="fsdfsdfsdfsdfsdfsdfsdfsdfsdfsfdf" />

</LinearLayout>
