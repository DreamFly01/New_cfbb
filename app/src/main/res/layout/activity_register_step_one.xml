<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_color"
    android:orientation="vertical"
    tools:context="com.cfbb.android.features.authentication.FindPassWordActivity">

    <include layout="@layout/view_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            style="@style/iv_gray_horizontal_line" />

        <EditText
            android:id="@id/et_01"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/transparent_bg"
            android:hint="请设置用户名"
            android:maxLength="20"
            android:singleLine="true"
            android:textColorHint="#CCCCCC"
            android:textSize="@dimen/size_18" />

        <ImageView
            style="@style/iv_gray_horizontal_line"
            android:layout_marginLeft="15dp"
           />
        <com.smileback.safeinputlib.IJMInputEditText
            android:id="@id/et_02"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/transparent_bg"
            android:hint="请设置登录密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="#CCCCCC"
            android:textSize="@dimen/size_18"
            />


        <ImageView
            style="@style/iv_gray_horizontal_line"
            android:layout_marginLeft="15dp"
             />
        <com.smileback.safeinputlib.IJMInputEditText
            android:id="@id/et_03"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/transparent_bg"
            android:hint="请确认登录密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="#CCCCCC"
            android:textSize="@dimen/size_18"
            />


        <ImageView
            style="@style/iv_gray_horizontal_line"
            android:layout_marginLeft="15dp"
            />

        <EditText
            android:id="@id/et_04"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/transparent_bg"
            android:hint="请输入推荐人的手机号码或会员名"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="#CCCCCC"
            android:textSize="@dimen/size_18" />

        <ImageView
            style="@style/iv_gray_horizontal_line" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:text="如果没有推荐人，可不填"
        android:textColor="@color/txt_6"
        android:textSize="@dimen/size_13" />

    <Button
        android:id="@id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/btn_red_selector"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/size_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:orientation="horizontal">

        <CheckBox
            android:id="@id/cb_01"
            android:button="@drawable/checkbox_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="已同意并阅读"
            android:textSize="13sp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textColor="@color/txt_3"
            />

        <TextView
            android:id="@id/tv_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="《财富中国服务协议》"
            android:textColor="@color/txt_3"
            android:textSize="@dimen/size_13" />
    </LinearLayout>

</LinearLayout>
