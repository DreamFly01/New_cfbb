<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cfbb.android.features.welcome.SplashActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></android.support.v4.view.ViewPager>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />


        <Button
            android:id="@id/btn_jump"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:layout_margin="20dp"
            android:textSize="@dimen/size_15"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/btn_jump_selector"/>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_with_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:text="CopyrightÂ©2014-2016 cfbb.com"
            android:textColor="@color/balck"
            android:textSize="@dimen/size_11" />
    </LinearLayout>


</LinearLayout>
