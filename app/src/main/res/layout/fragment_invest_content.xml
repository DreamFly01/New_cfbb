<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_color"
    tools:context="com.cfbb.android.features.invest.InvestContentFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@id/rl_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@id/tv_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/latested_str"
                    android:textColor="@color/txt_red"
                    android:textSize="@dimen/size_16" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@id/rl_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@id/tv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/invest_date_str"
                    android:textColor="@color/txt_3"
                    android:textSize="@dimen/size_16" />


                <ImageView
                    android:id="@id/iv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_02"
                    android:src="@mipmap/arrow_default" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/rl_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@id/tv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/year_of_rate_str"
                    android:textColor="@color/txt_3"
                    android:textSize="@dimen/size_16" />


                <ImageView
                    android:id="@id/iv_07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_03"
                    android:src="@mipmap/arrow_default" />
            </RelativeLayout>

        </LinearLayout>

        <com.cfbb.android.widget.PullDownView
            android:id="@id/pullDownView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/app_base_listview_divider"
                android:dividerHeight="15dp"
                android:fadingEdge="none"
                android:listSelector="@drawable/transparent_bg"
                android:scrollbars="none"></ListView>

        </com.cfbb.android.widget.PullDownView>

    </LinearLayout>


    <com.cfbb.android.widget.YCLoadingBg
        android:id="@+id/ycLoadingBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.cfbb.android.widget.YCLoadingBg>

</FrameLayout>
