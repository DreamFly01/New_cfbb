    android:layout_height="match_parent"
    android:background="@color/app_base_color"
    android:orientation="vertical">

    <com.cfbb.android.widget.YCLoadingBg
        android:id="@+id/ycLoadingBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ScrollView
