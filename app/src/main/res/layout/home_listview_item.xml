<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_color"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="中国财富E贷20160115524"
                    android:textColor="@color/txt_6"
                    android:textSize="@dimen/size_18" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:scaleType="fitXY"
                android:src="@mipmap/xu_ico" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@id/tv_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:includeFontPadding="false"
                            android:text="12.25"
                            android:textColor="@color/txt_red"
                            android:textSize="@dimen/size_32" />


                        <TextView
                            android:id="@id/tv_04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/tv_02"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@id/tv_02"
                            android:includeFontPadding="false"
                            android:text="%"
                            android:textColor="@color/txt_red"
                            android:textSize="@dimen/size_14" />

                        <TextView
                            android:id="@id/tv_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/tv_02"
                            android:layout_below="@id/tv_02"
                            android:layout_marginLeft="3dp"
                            android:includeFontPadding="false"
                            android:text="@string/expect_year_of_rate_str"
                            android:textColor="@color/txt_9"
                            android:textSize="@dimen/size_14" />


                        <TextView
                            android:id="@id/tv_05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@id/tv_06"
                            android:includeFontPadding="false"
                            android:text="3"
                            android:textColor="@color/txt_3"
                            android:textSize="@dimen/size_32" />

                        <TextView
                            android:id="@id/tv_06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/tv_05"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:includeFontPadding="false"
                            android:text="个月"
                            android:textColor="@color/txt_6"
                            android:textSize="@dimen/size_16" />

                        <TextView
                            android:id="@id/tv_07"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/tv_06"
                            android:layout_below="@id/tv_05"
                            android:includeFontPadding="false"
                            android:text="@string/invest_date_str"
                            android:textColor="@color/txt_9"
                            android:textSize="@dimen/size_14" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.cfbb.android.widget.InvestPrograssView
                            android:id="@id/pb_progressbar"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@id/tv_08"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="40%"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/size_12" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@id/btn_invest"
                        android:layout_width="85dp"
                        android:layout_height="38dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/btn_red_selector"
                        android:text="@string/invest_atonce_str"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_18" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@id/iv_03"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|top"
            android:scaleType="fitXY"
            android:src="@mipmap/product_type_default_ico" />

    </FrameLayout>

</LinearLayout>