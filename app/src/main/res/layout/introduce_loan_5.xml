<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_cailiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_color"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="上传材料" />

    <LinearLayout
        android:id="@+id/ll_shenfenz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reduce1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/reduce"
            android:visibility="gone" />

        <TextView
            android:id="@+id/shenfenz_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="身份证" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_gerenxinyong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/grey"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/reduce2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/reduce"
                android:visibility="gone" />

            <TextView
                android:id="@+id/xinyong_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="个人信用报告" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/introduce_loan_cheliangloan"></include>

    <include layout="@layout/introduce_loan_fangdailoan"></include>

    <include layout="@layout/introduce_loan_gerenloan"></include>

    <include layout="@layout/introduce_loan_qiyeloan"></include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/add1"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="添加证明材料，减少信息审核时间" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"></ImageView>

    <TextView
        android:id="@+id/txt_tijiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_red_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>