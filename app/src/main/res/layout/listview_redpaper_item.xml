<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_color"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@id/rl_01"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/my_unuse_redpaper_left"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ems="1"
            android:text="现金卷"
            android:textColor="@color/white"
            android:textSize="@dimen/size_26" />

    </RelativeLayout>

    <LinearLayout
        android:id="@id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/my_unuse_redpaper_right"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/ll_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/my_redpaper_bg"
            android:gravity="center|left"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/tv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="500.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_40" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:id="@id/tv_11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/tv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新手任务获得获得的"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/tv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期至："
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@id/tv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="2019-06-06"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>