<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_color"
    android:orientation="vertical">

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="19dp"
        android:text="请绑定持卡人本人的银行卡"
        android:textColor="@color/txt_9"
        android:textSize="@dimen/size_12" />

    <ImageView style="@style/iv_gray_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/ll_01"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持卡人"
                android:textColor="@color/txt_6"
                android:textSize="@dimen/size_18" />

            <TextView
                android:layout_toRightOf="@id/tv_02"
                android:id="@id/tv_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="-"
                android:textColor="@color/txt_6"
                android:textSize="@dimen/size_18" />

            <ImageView
                android:id="@id/iv_06"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:src="@mipmap/exclamation_mark_ico_new" />

        </RelativeLayout>

        <ImageView
            style="@style/iv_gray_horizontal_line"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="@string/choose_bank"
                android:textColor="@color/txt_3"
                android:textSize="@dimen/size_18" />

            <TextView
                android:id="@id/tv_08"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="36dp"
                android:background="@drawable/transparent_bg"
                android:gravity="center_vertical"
                android:hint="@string/please_choose_bank_hint"
                android:maxLength="25"
                android:singleLine="true"
                android:textColorHint="#CCCCCC"
                android:textSize="@dimen/size_18" />
        </LinearLayout>

        <ImageView
            style="@style/iv_gray_horizontal_line"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="@string/bank_num_str"
                android:textColor="@color/txt_3"
                android:textSize="@dimen/size_18" />

            <EditText
                android:id="@id/et_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="36dp"
                android:background="@drawable/transparent_bg"
                android:hint="@string/please_enter_bank_num_hint"
                android:inputType="numberDecimal"
                android:maxLength="25"
                android:singleLine="true"
                android:textColorHint="#CCCCCC"
                android:textSize="@dimen/size_18" />
        </LinearLayout>

        <ImageView
            style="@style/iv_gray_horizontal_line"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="@string/rechargemoeny_str"
                android:textColor="@color/txt_3"
                android:textSize="@dimen/size_18" />

            <EditText
                android:id="@id/et_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="36dp"
                android:background="@drawable/transparent_bg"
                android:hint="@string/please_enter_recharge_moeny_hint"
                android:inputType="numberDecimal"
                android:maxLength="11"
                android:singleLine="true"
                android:textColorHint="#CCCCCC"
                android:textSize="@dimen/size_18" />

        </LinearLayout>

        <ImageView style="@style/iv_gray_horizontal_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="账户余额"
            android:textColor="@color/txt_6"
            android:textSize="@dimen/size_15" />

        <TextView
            android:id="@id/tv_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="-"
            android:textColor="@color/txt_6"
            android:textSize="@dimen/size_15" />

    </LinearLayout>

</LinearLayout>